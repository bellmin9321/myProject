<html>
    <head>
        <link rel="stylesheet" href="/public/user1.css">
        <style>
            .login {
                color: blue;
            }
            .guest{
                color: red;
            }
        </style>
    </head>
    <body>
        <h1>Welcome our member</h1>
        <div>{{ name }}</div>
        <div>{{ age }}</div>
        <div>
            
                {{#each items}}
                    <li>{{ this }}</li>
                {{/each}}
            
        </div>
        <div>
            {{#if isLogin}}
            <div class="login"><h2>Success</h2></div>
            {{else}}
            <div class="guest"><h2>Try Again</h2></div>
            {{/if}}
        </div>
    </body>
</html>
